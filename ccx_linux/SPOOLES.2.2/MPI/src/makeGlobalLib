      splitPencil.c \
      symbfacMPI.c \
      utilities.c

OBJ_FILES = ${SRC:.c=.o}
OBJ_FILES = MMM.o makeSendRecvIVLs.o

.c.o :
	$(PURIFY) $(CC) -c $(CFLAGS) $(MPI_INCLUDE_DIR) $*.c -o $(OBJ)_$*.o

../../spooles.a : ${OBJ_FILES}
	$(AR) $(ARFLAGS) ../../spooles.a $(OBJ)_*.o
	rm -f $(OBJ)_*.o
	$(RANLIB) ../../spooles.a
	
