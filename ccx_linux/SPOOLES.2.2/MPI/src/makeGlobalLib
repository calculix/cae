OBJ = MPI

SRC = aggListMPI.c \
      colmapMPI.c \
      DenseMtx_gather.c \
      DenseMtx_scatterAdd.c \
      ETree_Bcast.c \
      factorMPI.c \
      fullAdjMPI.c \
      Graph_Bcast.c \
